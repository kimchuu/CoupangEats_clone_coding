<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recycler_item_store_small_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/category_chicken"
        android:scaleType="centerCrop"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/recycler_item_store_small_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="치킨선생 목동점"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/recycler_item_store_small_image"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recycler_item_store_small_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_item_store_small_image"
        app:layout_constraintBottom_toBottomOf="@id/recycler_item_store_small_delivery_fee">

        <TextView
            android:id="@+id/recycler_item_store_small_info_star_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/recycler_item_store_small_info_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.7"
            android:textColor="@color/black"
            android:textSize="12sp"

            app:layout_constraintStart_toEndOf="@id/recycler_item_store_small_info_star_img"
            app:layout_constraintTop_toTopOf="parent"

            />
        <TextView
            android:id="@+id/recycler_item_store_small_info_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(323)"
            android:textColor="@color/black"
            android:textSize="12sp"

            app:layout_constraintStart_toEndOf="@id/recycler_item_store_small_info_star"
            app:layout_constraintTop_toTopOf="parent"

            />
        <TextView
            android:id="@+id/recycler_item_store_small_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" · "
            android:textColor="@color/black"
            android:textSize="12sp"

            app:layout_constraintStart_toEndOf="@id/recycler_item_store_small_info_review"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/recycler_item_store_small_info_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.0km"
            android:textColor="@color/black"
            android:textSize="12sp"

            app:layout_constraintStart_toEndOf="@id/recycler_item_store_small_dot"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/recycler_item_store_small_delivery_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무료배달"
        android:textColor="@color/black"
        android:textSize="10sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_item_store_small_title"
        android:layout_marginTop="4dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>