<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:color="@color/dark_gray" android:width="1dp" />
                    <corners android:radius="4dp" />
                    <solid android:color="#fff" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_check_gray"
                android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
        </layer-list>


    </item>
    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <corners android:radius="4dp" />
                    <solid android:color="@color/agree_btn_color" />
                </shape>
            </item>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/ic_baseline_check_white"
                android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
        </layer-list>
    </item>
</selector>